{
  "name": "space-invaders-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "cross-env NODE_ENV=test mocha \"test/**/*.test.js\" --exit --timeout 5000",
    "test:watch": "cross-env NODE_ENV=test mocha \"test/**/*.test.js\" --watch --exit",
    "test:coverage": "cross-env NODE_ENV=test c8 --reporter=lcov --reporter=text --reporter=html mocha \"test/**/*.test.js\" --exit --timeout 5000",
    "test:unit": "cross-env NODE_ENV=test mocha \"test/{validation,scoreService,scoreController}.test.js\" --exit",
    "test:integration": "cross-env NODE_ENV=test mocha \"test/integration.test.js\" --exit --timeout 10000"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mysql2": "^3.6.0"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "cross-env": "^10.1.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  }
}