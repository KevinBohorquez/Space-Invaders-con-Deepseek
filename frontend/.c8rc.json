{
  "all": true,
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "src/main.js",
    "src/game/game.js",
    "dist/**",
    "test/**",
    "**/*.test.js",
    "node_modules/**",
    "coverage/**"
  ],
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "report-dir": "./coverage",
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}